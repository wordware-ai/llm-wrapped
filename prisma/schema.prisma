// Configuration
generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "npx zod-prisma-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model User {
  id        String   @id 
  email     String?  @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  spotifyRoast SpotifyRoast?
}

model SpotifyRoast {
  id                       String @id @default(cuid())
  musicTasteAnalysis       String
  identityCrisisLevel      String
  emotionalStability       String
  danceFloorCredibility    String
  timeMachineStatus        String
  achievementUnlocked      String
  geographicConfusion      String
  guiltyPleasureSong       String
  songsYouThinkAreAboutYou String
  lyricTherapistNeeded     String
  finalDiagnosis           String
  recommendation           String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}
