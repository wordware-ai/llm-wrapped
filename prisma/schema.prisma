// Configuration
generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "npx zod-prisma-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model User {
  id        String   @id
  email     String?  @unique
  username  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  spotifyResult SpotifyResult?
}

model SpotifyResult {
  id             String @id @default(cuid())
  response1      String
  response2      String
  response3      String
  response4      String
  response5      String
  response6      String
  response7      String
  response8      String
  response9      String
  response10     String
  response11     String
  response12     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}
